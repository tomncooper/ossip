<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flink Improvement Proposals</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <h1>Flink Improvement Proposals (FLIPs)</h1>
    <div class="nav-bar">
        <div class="nav-item"><a href="index.html">Back to OSSIP</a></div>
        <div class="nav-item">GitHub Repository: <a href="https://github.com/tomncooper/ossip">tomncooper/ossip</a></div>
        <div class="nav-item">Last Updated: {{ date }}</div>
    </div>
    
    <!-- Filter Controls -->
    <div id="filter-controls"></div>
    
    <table>
        <thead>
        <tr>
            <th>FLIP</th>
            <th>Description</th>
            <th>Component</th>
            <th>Target Release</th>
            <th>+1</th>
            <th>0</th>
            <th>-1</th>
            <th>Created by</th>
            <th>State</th>
            <th>JIRA</th>
            <th>More Info</th>
        </tr>
        </thead>
        <tbody>
        {% for flip in flip_data %}
        <tr data-state="{{ flip['state']|e }}" data-created-by="{{ flip['created_by']|e }}" data-component="{{ flip['release_component']|e }}">
            <td><a href={{ flip['web_url'] }}>{{ flip['id'] }}</a></td>
            <td>{{ flip['title'] }}
            {% if flip["release_component"] == "not set" or flip["release_component"] == "unknown" %}
            <td></td>
            {% else %}
            <td>{{ flip['release_component'] }}
            {% endif %}
            {% if flip["release_version"] == "not set" or flip["release_version"] == "unknown" %}
            <td></td>
            {% else %}
            <td>{{ flip['release_version'] }}
            {% endif %}
            {% if flip["+1"] %}
            <td class="vote-positive">
                <div class="tooltip">{{ flip["+1"]|length }}
                    <span class="tooltiptext">
                        {% for voter in flip["+1"] %}
                        {{ voter.name }}<br><em>{{ voter.timestamp }}</em><br>
                        {% endfor %}
                    </span>
                </div>
            </td>
            {% else %}
            <td>{{ flip["+1"]|length }}</td>
            {% endif %}
            {% if flip["0"] %}
            <td class="vote-neutral">
                <div class="tooltip">{{ flip["0"]|length }}
                    <span class="tooltiptext">
                        {% for voter in flip["0"] %}
                        {{ voter.name }}<br><em>{{ voter.timestamp }}</em><br>
                        {% endfor %}
                    </span>
                </div>
            </td>
            {% else %}
            <td>{{ flip["0"]|length }}</td>
            {% endif %}
            {% if flip["-1"] %}
            <td class="vote-negative">
                <div class="tooltip">{{ flip["-1"]|length }}
                    <span class="tooltiptext">
                        {% for voter in flip["-1"] %}
                        {{ voter.name }}<br><em>{{ voter.timestamp }}</em><br>
                        {% endfor %}
                    </span>
                </div>
            </td>
            {% else %}
            <td>{{ flip["-1"]|length }}</td>
            {% endif %}
            <td>{{ flip['created_by'] }}</td>
            <td>{{ flip["state"] }}</td>
            {% if flip["jira_id"] == "not set" %}
            <td></td>
            {% else %}
            <td><a href={{ flip['jira_link'] }}>{{ flip['jira_id'] }}</a></td>
            {% endif %}
            <td><a href=flips/FLIP-{{ flip['id'] }}.html>info</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Filter JavaScript -->
    <script src="assets/table-filter.js"></script>
    <script>
        TableFilter.init({
            tableSelector: 'table',
            filterContainerId: 'filter-controls',
            columns: [
                { id: 'state', label: 'State', dataAttr: 'data-state' },
                { id: 'created-by', label: 'Created By', dataAttr: 'data-created-by' },
                { id: 'component', label: 'Component', dataAttr: 'data-component' }
            ]
        });
    </script>
</body>

</html>